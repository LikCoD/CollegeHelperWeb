{
  "name": "ui-elements",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ui-elements/src",
  "prefix": "ui",
  "targets": {
    "build": {
      "executor": "@nrwl/angular:ng-packagr-lite",
      "outputs": [
        "{workspaceRoot}/dist/{projectRoot}"
      ],
      "options": {
        "project": "libs/ui-elements/ng-package.json",
        "tailwindConfig": "libs/ui-elements/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-elements/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui-elements/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "libs/ui-elements/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "libs/ui-elements/**/*.ts",
          "libs/ui-elements/**/*.html"
        ]
      }
    }
  },
  "tags": []
}
